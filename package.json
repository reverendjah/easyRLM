{
  "name": "easyrlm",
  "version": "1.4.1",
  "description": "Recursive Language Models for Claude Code - Persistent context management with Kakaroto Fields",
  "type": "module",
  "main": "lib/index.js",
  "bin": {
    "easyrlm": "./bin/cli.js",
    "easyrlm-benchmark": "./benchmark/bin/benchmark.js"
  },
  "scripts": {
    "test": "node bin/cli.js",
    "benchmark": "node benchmark/bin/benchmark.js",
    "benchmark:base": "node benchmark/bin/benchmark.js --adapter base",
    "benchmark:rlm": "node benchmark/bin/benchmark.js --adapter rlm",
    "benchmark:compare": "node benchmark/bin/benchmark.js --adapter both --output markdown"
  },
  "keywords": [
    "claude",
    "claude-code",
    "rlm",
    "recursive-language-models",
    "ai",
    "context-management",
    "kakaroto"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "bin/",
    "lib/",
    "templates/"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reverendjah/easyRLM"
  }
}
